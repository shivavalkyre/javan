				toolbar="#toolbar1" pagination="true"
				rownumbers="true" fitColumns="true" singleSelect="true">
			<thead>
				<tr>
					<th field="nama" width="50">Nama</th>
					<th field="jk" width="50">Jenis Kelamin</th>
                    <th field="id_parent" hidden width="50">ID Parent</th>
                    <!-- <th field="id_asset" width="50">ID Asset</th> -->
                    <!-- <th align="center" data-options="field:'openfile1',formatter:openfile1">Aksi</th> -->
				</tr>
			</thead>
			</table>
